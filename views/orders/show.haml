.panel.panel-info
  .panel-heading
    Information about Order &nbsp;
    = @order.order_no

  %table.table
    %thead
      %tr
        %th Item name
        %th Unit price
        %th Quantity
        %th Total price
    %tbody
      -@line_items.each do |line_item|
        %tr
          %td= line_item.product.name
          %td= line_item.unit_price
          %td= line_item.qty
          %td= line_item.total_price
  %h5.pull-right.total
    Total
    =@order.total
%br       
%a.btn.btn-info{:type => "button", href: "/orders", method: :get} Back to Orders
